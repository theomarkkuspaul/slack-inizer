source 'https://rubygems.org' do

  gem 'pg'

  # sinatra web server
  gem 'sinatra'
  gem 'sinatra-contrib'

  # run the server using shotgun
  gem 'shotgun'

  gem 'rake'

  # Object Relational Mapper
  gem 'activerecord'
  gem 'activesupport'

  # BCrypt for password hashing
  gem 'bcrypt'

  # Make HTTP requests
  gem 'rest-client'

  group :development do

    gem 'pry'

  end
end